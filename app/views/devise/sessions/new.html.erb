
<div class="col-md-offset-3 col-md-5">
<h2>Sign in</h2>
<% if resource.errors.any? %>
<div class="alert alert-danger">
<%= devise_error_messages! %>
</div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email,  :placeholder => "John@john.com", :class => "form-control multiselect multiselect-icon", :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password,  :placeholder => "nothing easy", :class => "form-control multiselect multiselect-icon" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-primary btn-lg" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>