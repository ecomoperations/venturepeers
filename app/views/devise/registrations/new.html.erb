
<div class="col-md-offset-3 col-md-5">
<h2>Sign up</h2>

<div class="alert alert-danger">
<%= devise_error_messages! %>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <div><%= f.label :first_name %>
  <%= f.text_field :first_name, :autofocus => true, :placeholder=>"First Name", :class=>"form-control input-lg" %>

  <div><%= f.label :last_name %>
  <%= f.text_field :last_name, :autofocus => true, :placeholder=>"Last Name", :class=>"form-control input-lg" %>

  <div><%= f.label :username %>
  <%= f.text_field :username, :autofocus => true, :placeholder=>"Username", :class=>"form-control input-lg" %>


  <div><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true, :placeholder => "john@john.com", :class => "form-control multiselect multiselect-icon" %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password, :placeholder => "RegEx", :class => "form-control multiselect multiselect-icon" %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, :placeholder => "RegEx", :class => "form-control multiselect multiselect-icon" %></div><br>

  <div><%= f.submit "Sign up", :class => "btn btn-primary" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>