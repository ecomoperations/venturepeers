<%= form_for(@tutorial) do |f| %>
  <% if @tutorial.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tutorial.errors.count, "error") %> prohibited this tutorial from being saved:</h2>

      <ul>
      <% @tutorial.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :functionality %><br>
    <%= f.text_field :functionality %>
  </div>
  <div class="field">
    <%= f.collection_select(:resource_language_ids, ResourceLanguage.all, :id, :thetut, {prompt: '-Select-'},  {:class=>"form-control multiselect multiselect-icon"}) %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :suggestion %><br>
    <%= f.check_box :suggestion %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
