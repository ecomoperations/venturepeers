<div class="container">
<div class="col-sm-8 col-sm-offset-1">
  <h2>Help Me With</h2> 
  <%= search_form_for @search do |f| %>
  <%= f.collection_select(:learning_languages_id_eq, LearningLanguage.all, :id, :thelearn, {prompt: '-Select Language You are Learning-'}, {:class=>"form-control multiselect multiselect-icon"}) %>
  <% end %>
</div>
<div class="col-sm-">
  
 
<br>

  <%= search_form_for @search do |f| %>
    <%= f.label(:functionality_cont, "Search") %>
    <%= f.text_field(:functionality_cont)%>

  <% end %>
</div>
  <div class="col-md-6 tutorial_index">
  <h3>Functionality</h3>
    <% @tutorials.each do |tutorial| %>
      <div class="well">
        
        <p class="pull-right"><%= tutorial.learning_languages.map{|u| u[:thelearn]}.join(', ') %> | Viewed: 12</p>
        <h4><%= link_to "#{tutorial.functionality}", tutorial_path(tutorial) %></h4>
      </div>
        
    <% end %>
    
  </div>
  <div class="col-md-6 tutorial_index">
  <h3>Suggestions</h3>
    <% @suggestions.each do |suggestion| %>
      <div class="well">
        <p class="pull-right"><%= suggestion.learning_languages.map{|u| u[:thelearn]}.join(',') %> | <%= link_to "", like_tutorial_path(suggestion), method: :put, class: "glyphicon glyphicon-hand-up" %> <%= suggestion.likes.size %> </p>
        <h4><%= link_to "#{suggestion.functionality}", tutorial_path(suggestion) %></h4>
        

      </div>

    <% end %>

  </div>
</div>
  
