<%= form_for(@venture) do |f| %>

<div class="col-md-4 col-md-offset-1">
  <tr>
    <td><%= f.label(:venture_name, "Venture Name:") %></td>
    <td><%= f.text_field(:venture_name, :placeholder => "Be Captivating!", :class=>"form-control") %></td>
  </tr></br>
  <div class="check_box_area">
   <h3 class="page-header">What Language Do You Need for Your Venture?</h3>
   <tr>    
    <td><%= f.collection_check_boxes(:language_need_ids, LanguageNeed.all, :id, :theneed, {}, {:class=>"form_checks"}) %></td>
  </tr></br>
  </div>
  </div>
  <div class="col-md-3 col-md-offset-1">
  <tr>
    <td><%= f.label(:type_venture_ids, "What Type of Venture is This?") %></td>
    <td><%= f.collection_select(:type_venture_ids, TypeVenture.all, :id, :thetype, {prompt: '-Select The Type of Venture-'}, {:class=>"form_select"} ) %></td>
  </tr></br>

  <tr> 

  <th><%= f.label(:minimum_skill_ids, "Skill level must be at least:") %></th>
    <td><%= f.collection_select(:minimum_skill_ids, MinimumSkill.all, :id, :themin, {:class=>"form_select"}) %></td>
  </tr></br>
  <tr>
      <td><%= f.label(:about_venture, "Tell Everyone About Your Venture") %></td>
    <td><%= f.text_area(:about_venture, :placeholder=>"Why is this venture so cool?", :class=>"form-control") %></td>
  </tr></br>
  <tr>
    <td><%= f.label(:type_payment_ids, "Will This be a Paid Venture?") %></td>
    <td><%= f.collection_select(:type_payment_ids, TypePayment.all, :id, :thepay, {prompt: '-Select Payment Type-'},  {:class=>"form_select"}) %></td>
  </tr></br>
  <tr>
  </div>
  

  


  <div class="actions">
    <%= f.submit :class=>"btn btn-primary btn-lg col-md-2 col-md-offset-5" %>
  </div>
<% end %>

<%= link_to 'Back', ventures_path %>
